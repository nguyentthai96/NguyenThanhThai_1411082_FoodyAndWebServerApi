<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8.0dip"
    android:layout_marginRight="8.0dip"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/size_image_res_item"
        android:layout_height="@dimen/size_image_res_item"
        android:layout_gravity="center"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip">

        <View
            android:id="@+id/roundColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_circle"/>

        <ImageView
            android:id="@+id/imgIconItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8.0dip"
            android:layout_marginRight="8.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/icon_dulich" />
    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:paddingBottom="20.0dip"
        android:paddingTop="5.0dip"
        android:singleLine="true"
        android:text="An Nhau dwqdwdfewfwefwef ebfbewfwbfiewifiwefiwifiweifiwbeifiw efibewib cgcgchc"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small_1" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dn_item_offset"
        android:background="@drawable/line_divider" />

    <ImageView
        android:layout_marginTop="@dimen/dn_item_offset5"
        android:id="@+id/img_icon_category"
        android:layout_width="@dimen/size_icon_tab_32"
        android:layout_height="@dimen/size_icon_tab_32"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_below="@id/divider" />

    <TextView
        android:id="@+id/txt_name_one_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/img_icon_category"
        android:text="Category item" />


    <ImageView
        android:id="@+id/img_is_choose_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/stick_icon"
        android:visibility="gone" />
</RelativeLayout>
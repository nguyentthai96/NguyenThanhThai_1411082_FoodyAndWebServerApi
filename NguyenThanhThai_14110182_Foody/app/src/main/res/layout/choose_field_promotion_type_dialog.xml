<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="200.0dip"
    android:orientation="vertical">
    <!--android:background="@drawable/save_list_round_corner_bg"-->

    <ListView
        android:id="@+id/listItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:cacheColorHint="#00000000"
        android:divider="@color/listview_divider"
        android:dividerHeight="1.0px"
        android:listSelector="@drawable/list_item_selector"
        android:overScrollMode="never" />
    <!--android:background="@drawable/search_sort_options"-->


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>
        <!--android:background="@drawable/flyout_comment_box_top_shadow" />-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40.0dip">

        <Button
            android:id="@+id/btnOk"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/list_item_selector"
            android:gravity="center"
            android:text="@string/L_ACTION_OK"
            android:textColor="#ff333333"
            android:textSize="@dimen/text_size_small_2"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1.0px" android:color="#ffcccccc" />
            <gradient android:centerColor="#00000000" android:endColor="#00000000" android:startColor="#00000000" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1.0px" android:color="#ff006fcd" />
            <gradient android:centerColor="#ff006fcd" android:endColor="#ff006fcd" android:startColor="#ff006fcd" />
        </shape>
    </item>
</selector>